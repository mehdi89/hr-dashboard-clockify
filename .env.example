# Database Configuration
# Cloud database (Neon) for production
DATABASE_URL=postgresql://user:password@hostname/database?sslmode=require
POSTGRES_PRISMA_URL=postgresql://user:password@hostname/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://user:password@hostname/database?sslmode=require

# Session Configuration
SESSION_SECRET=your_secure_session_secret_at_least_32_characters_long

# Admin User Configuration (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
ADMIN_EMAIL=admin@example.com

# Node Environment
NODE_ENV=production
